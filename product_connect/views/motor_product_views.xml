<odoo>
    <record id="view_motor_product_search" model="ir.ui.view">
        <field name="name">motor.product.search</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <search string="Search Motor Products">
                <filter name="group_by_motor" string="Motor" context="{'group_by': 'motor'}"/>
            </search>
        </field>
    </record>

    <record id="view_motor_product_tree" model="ir.ui.view">
        <field name="name">motor.product.tree</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <tree string="Motor Products" editable="bottom" open_form_view="1" create="0"
                  decoration-warning="not name or not list_price or list_price == 0 or not standard_price or
                standard_price == 0"
                  decoration-danger="has_recent_messages">
                <header>
                    <button string="Import" type="object" name="import_to_products" icon="fa-upload"/>
                </header>
                <field name="computed_name" column_invisible="1"/>
                <field name="is_listable" widget="boolean_toggle" string="Listable"/>
                <field name="ready_to_list" widget="boolean" string="Ready"/>
                <field name="default_code" width="20px"/>
                <field name="images" widget="file_drop" optional="show"/>
                <field name="image_count" column_invisible="1"/>
                <field name="manufacturer" options="{'no_create': True}"/>
                <field name="mpn" width="20px"/>
                <field name="qty_available" widget="integer" string="Qty" width="50px"/>
                <field name="bin" width="20px" optional="hide"/>
                <button name="reset_name" type="object" icon="fa-refresh" class="sc_refresh_button_row"
                        title="Reset Name" invisible="computed_name == name"/>
                <field name="name" decoration-warning="computed_name != name"/>
                <field name="description" optional="show" widget="text" class="text-nowrap"/>
                <field name="part_type" optional="hide"/>
                <field name="weight" optional="hide" width="70px" widget="integer"/>
                <field name="length" string="L" optional="hide" width="2"/>
                <field name="width" string="W" optional="hide" width="2"/>
                <field name="height" string="H" optional="hide" width="2"/>
                <field name="list_price" optional="show" width="80px"/>
                <field name="standard_price" optional="show" width="70px"/>
                <field name="has_recent_messages" column_invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="view_motor_product_tree_dismantle" model="ir.ui.view">
        <field name="name">motor.product.tree</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <tree string="Motor Products" editable="bottom" open_form_view="1" create="0" delete="0">
                <field name="qty_available" widget="integer"/>
                <field name="first_mpn"/>
                <field name="short_name"/>
                <field name="is_dismantled" widget="boolean_toggle" string="Done"/>
                <field name="is_dismantled_qc" widget="boolean_toggle" string="QC"/>
            </tree>
        </field>
    </record>
    <record id="view_motor_product_tree_clean" model="ir.ui.view">
        <field name="name">motor.product.tree</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <tree string="Motor Products" editable="bottom" open_form_view="1" create="0" delete="0">
                <field name="qty_available" widget="integer"/>
                <field name="first_mpn"/>
                <field name="short_name"/>
                <field name="is_cleaned" widget="boolean_toggle" string="Done"/>
                <field name="is_cleaned_qc" widget="boolean_toggle" string="QC"/>
            </tree>
        </field>
    </record>
    <record id="view_motor_product_tree_picture" model="ir.ui.view">
        <field name="name">motor.product.tree</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <tree string="Motor Products" editable="bottom" open_form_view="1" create="0" delete="0">
                <field name="is_qty_listing" widget="boolean" string="Qty Listing"/>
                <field name="default_code"/>
                <field name="images" widget="file_drop"/>
                <field name="images"/>
                <field name="image_count" column_invisible="1"/>
                <field name="first_mpn"/>
                <field name="qty_available" widget="integer"/>
                <field name="short_name"/>
                <field name="bin" optional="hide"/>
                <field name="weight" widget="integer" optional="hide"/>
                <field name="length" string="L" optional="hide"/>
                <field name="width" string="W" optional="hide"/>
                <field name="height" string="H" optional="hide"/>

                <field name="is_pictured" widget="boolean_toggle" string="Done"/>
                <field name="is_pictured_qc" widget="boolean_toggle" string="QC"/>
            </tree>
        </field>
    </record>

    <record id="view_motor_product_tree_stock" model="ir.ui.view">
        <field name="name">motor.product.tree</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <tree string="Motor Products" editable="bottom" open_form_view="1" create="0" delete="0">
                <field name="default_code"/>
                <field name="qty_available" widget="integer"/>
                <field name="short_name"/>
                <field name="bin"/>
                <field name="weight" widget="integer"/>
                <field name="length" string="L"/>
                <field name="width" string="W"/>
                <field name="height" string="H"/>
            </tree>
        </field>
    </record>

    <record id="view_motor_product_kanban" model="ir.ui.view">
        <field name="name">motor.product.kanban</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="reference_product"/>
                <field name="image_256"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">

                            <field name="reference_product" invisible="1"/>
                            <div class="oe_kanban_image">
                                <img t-att-src="kanban_image('product.template', 'image_256', record.reference_product.raw_value)"
                                     style="border-radius: 5px; max-width: none;" alt="Product Image"/>
                            </div>

                            <div class="oe_kanban_details">
                                <div class="oe_kanban_bottom_left">
                                    <strong>
                                        <field name="short_name"/><br/>
                                    </strong>
                                    MPN: <field name="first_mpn"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    Quantity: <field name="qty_available" widget="integer"/><br/>
                                    Quantity Listing: <field name="is_qty_listing" widget="boolean_toggle"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_motor_product_form" model="ir.ui.view">
        <field name="name">motor.product.form</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <form string="Motor Product">
                <div class="oe_chatter">
                    <!--suppress XmlUnresolvedReference -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!--suppress XmlUnresolvedReference -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                <sheet name="motor_product_form">
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active" widget_id="widget_1"/>
                    <field name="image_icon" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="name" string="Motor Product Name"></label>
                        <button name="reset_name" type="object" icon="fa-refresh" class="sc_refresh_button_row"
                                title="Reset Name"/>
                        <h1>
                            <div class="d-flex caution">
                                <field class="text-break" name="name" options="{'line_breaks': False}"
                                       decoration-warning="computed_name != name"/>
                            </div>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="motor"/>
                                    <field name="manufacturer" options="{'no_create': True}"/>
                                    <field name="computed_name"/>
                                    <field name="mpn"/>
                                    <field name="bin"/>
                                    <field name="list_price"/>
                                    <field name="standard_price"/>
                                    <field name="condition"/>
                                </group>
                                <group>
                                    <field name="template"/>
                                    <field name="part_type"/>
                                    <field name="default_code"/>
                                    <field name="qty_available" widget="integer"/>
                                    <field name="weight" widget="integer"/>
                                    <field name="length"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                </group>
                                <group>
                                    <field name="is_listable" widget="boolean_toggle"/>
                                </group>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </page>
                        <page string="Images">
                            <field name="images">
                                <tree editable="bottom" delete="False">
                                    <field name="product" column_invisible="1"/>
                                    <field name="image_256" widget="image" column_invisible="1"/>
                                    <field name="image_1920" widget="image_upload"/>
                                    <field name="index"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_motor_product_form">
        <field name="name">Motor Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">motor.product</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_motor_product_search"/>
        <field name="context">{'search_default_group_by_motor': 1}</field>
        <field name="domain">[]</field>
    </record>

    <menuitem id="menu_motor_product" name="Motor Products" parent="menu_subheader_motor"
              action="action_motor_product_form" sequence="20"/>

</odoo>