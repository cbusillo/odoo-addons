<odoo>
    <record id="view_motor_product_search" model="ir.ui.view">
        <field name="name">motor.product.search</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <search string="Search Motor Products">
                <filter name="group_by_motor" string="Motor" context="{'group_by': 'motor'}"/>
            </search>
        </field>
    </record>

    <record id="view_motor_product_tree" model="ir.ui.view">
        <field name="name">motor.product.tree</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <tree string="Motor Products" editable="bottom" open_form_view="1"
                  decoration-warning="not name or not list_price or list_price == 0 or not standard_price or standard_price == 0"
                  decoration-danger="has_recent_messages">
                <header>
                    <button string="Import" type="object" name="import_to_products" icon="fa-upload"/>
                </header>
                <field name="computed_name" column_invisible="1"/>
                <field name="is_listable" widget="boolean_toggle"/>
                <field name="default_code" width="20px"/>
                <field name="mpn" width="20px"/>
                <field name="qty_available"/>
                <field name="bin" width="20px"/>
                <button name="reset_name" type="object" icon="fa-refresh" class="sc_refresh_button_row"
                        title="Reset Name" invisible="computed_name == name"/>
                <field name="name" decoration-warning="computed_name != name"/>
                <field name="description" optional="show" width="20px"/>
                <field name="part_type"/>
                <field name="weight"/>
                <field name="list_price"/>
                <field name="standard_price"/>
                <field name="images" widget="file_drop" optional="show"/>
                <field name="image_count" column_invisible="1"/>
                <field name="has_recent_messages" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_motor_product_form" model="ir.ui.view">
        <field name="name">motor.product.form</field>
        <field name="model">motor.product</field>
        <field name="arch" type="xml">
            <form string="Motor Product">
                <div class="oe_chatter">
                    <!--suppress XmlUnresolvedReference -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!--suppress XmlUnresolvedReference -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                <sheet name="motor_product_form">
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active" widget_id="widget_1"/>
                    <field name="icon" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="name" string="Motor Product Name"></label>
                        <button name="reset_name" type="object" icon="fa-refresh" class="sc_refresh_button_row"
                                title="Reset Name"/>
                        <h1>
                            <div class="d-flex caution">
                                <field class="text-break" name="name" options="{'line_breaks': False}"
                                       decoration-warning="computed_name != name"/>
                            </div>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="motor"/>
                                    <field name="computed_name"/>
                                    <field name="mpn"/>
                                    <field name="bin"/>
                                    <field name="list_price"/>
                                    <field name="standard_price"/>
                                </group>
                                <group>
                                    <field name="template"/>
                                    <field name="part_type"/>
                                    <field name="default_code"/>
                                    <field name="qty_available"/>
                                    <field name="weight"/>
                                    <field name="sequence"/>
                                </group>
                                <group>
                                    <field name="is_listable" widget="boolean_toggle"/>
                                </group>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </page>
                        <page string="Images">
                            <field name="images">
                                <tree editable="bottom" delete="False">
                                    <field name="image_256" widget="image" column_invisible="1"/>
                                    <field name="image_1920" widget="image_upload"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_motor_product_form">
        <field name="name">Motor Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">motor.product</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_motor_product_search"/>
    </record>

    <menuitem id="menu_motor_product" name="Motor Products" parent="menu_subheader_motor"
              action="action_motor_product_form" sequence="20"/>

</odoo>